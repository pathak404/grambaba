
    RewriteEngine On
    RewriteBase /
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]


	RewriteCond %{THE_REQUEST} ^POST(.*)HTTP/(0\.9|1\.0)$ [NC]
	RewriteRule .* - [F,L]





	RewriteCond %{REQUEST_METHOD} POST
	RewriteCond %{REQUEST_URI} /order/create-order\.php [NC,OR]
    RewriteCond %{REQUEST_URI} /contact-us/sendmail\.php [NC]
	RewriteCond %{HTTP_REFERER} !(.*)grambaba.com(.*) [NC]
	RewriteRule .* - [F,L]



    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
    RewriteRule ^ %1/ [R=301,L]
    
    # Add a trailing slash at the end    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !/$
    RewriteRule . %{REQUEST_URI}/ [L,R=301]
    
    # To internally forward /dir/foo to /dir/foo.html
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*?)/?$ $1.php [L]


    Header set Strict-Transport-Security: "max-age=63072000; includeSubDomains; preload"
    Header add Content-Security-Policy "connect-src 'self';"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header always append X-Frame-Options SAMEORIGIN
